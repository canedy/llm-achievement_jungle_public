datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}


model Goal {
  id           Int           @id @default(autoincrement())   
  type         ObjectiveType
  description  String
  status       Status
  start_date   DateTime
  end_date     DateTime
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  result       Result[] 

  @@map("goals")
}

model Result {
  id      Int       @id @default(autoincrement())
  goal_id      Int
  description  String
  status       Status
  due_date     DateTime
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  actions      Action[]

  goal    Goal @relation(fields: [goal_id], references: [id], onDelete: Cascade)

  @@map("results")
}

model Action {
  id           Int       @id @default(autoincrement())
  result_id    Int
  description  String
  note         String?
  status       Status
  date_achieved DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  result       Result?   @relation(fields: [result_id], references: [id], onDelete: Cascade)

  @@map("actions")
}

enum ObjectiveType {
  Personal
  Professional
  Physical
  Mental_Health
  Financial
  relationships
  Spiritual
  Social
  Other  
}

enum Status {
  NotStarted
  InProgress
  Complete
}